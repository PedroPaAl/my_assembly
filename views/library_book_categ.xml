<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='montaje_mueble_category_action' model='ir.actions.act_window'>
        <field name="name">Categoria Muebles</field>
        <field name="res_model">montaje.mueble.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Categoria Muebles" id="montaje_mueble_category_menu" parent="montaje_base_menu" action="montaje_mueble_category_action"/>

    <!-- Form View -->
    <record id="montaje_mueble_category_view_form" model="ir.ui.view">
        <field name="name">Montaje Mueble Form</field>
        <field name="model">montaje.mueble.category</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="parent_id"/>
                    </group>
                </group>
                <group>
                    <field name="child_ids"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="montaje_mueble_category_view_tree" model="ir.ui.view">
        <field name="name">montaje muebles List</field>
        <field name="model">montaje.mueble.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

</odoo>
